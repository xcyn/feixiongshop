<view class="order-container">
  <van-cell-group class="order-title" title="地址列表">
    <van-cell bind:tap="showPopup" title="收货地址" label="地址描述" is-link />
  </van-cell-group>
  <view class="top20">
    <van-cell-group class="order-title" title="个人信息">
      <van-field
        label="姓名"
        model:value="{{ name }}"
        placeholder="请输入姓名"
      />
      <van-field
        label="手机号"
        model:value="{{ phone }}"
        placeholder="请输入手机号"
      />
      <van-field
        label="详细地址"
        model:value="{{ fullAddress }}"
        placeholder="请输入详细地址"
      />
    </van-cell-group>
  </view>
  <van-popup
  show="{{ show }}"
  position="bottom"
  custom-style="height: 50%;"
  bind:close="handleClose"
  >
    <van-area
     bind:confirm="handleConfirm" area-list="{{ areaList }}" value="{{areaVal}}" />
  </van-popup>
  <van-goods-action class="goods-action">
    <van-goods-action-button text="保存" bind:tap="handleSaveAddress" />
  </van-goods-action>
</view>
