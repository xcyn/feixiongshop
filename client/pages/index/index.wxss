/**index.wxss**/
/* 顶部轮播 */
.banner-swiper {
  width: 750rpx;
}
.swiper-item-img {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
/* 通知区域 */
.notice {
  width: 96%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  margin: 0 auto;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.05)
}
.notice-logo {
  width: 146rpx;
  height: 38rpx;
}
.notice-right {
  display: flex;
  margin-right: 10rpx;
  align-items: center;
}
.notice-right-icon {
  margin-left: 10rpx;
  width: 16rpx;
  height: 24rpx;
}

.notice-scroll-bar {
  min-width: 300rpx;
}

.good-title {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.good-title-logo {
  width: 30rpx;
  height: 30rpx;
}

.good-title-text {
  padding-left: 10rpx;
}

.good-item {
  display: flex;
  padding: 20rpx 15%;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.good-item-logo {
  width: 200rpx;
  height: 200rpx;
}
.good-item-logo > image {
  width: 100%;
  height: 100%;
}
.good-des {
  padding-left: 20rpx;
  text-align: center;
  flex: 1;
}
.good-des-title {
  padding-bottom: 10rpx;
}
.good-des-price {
  padding-bottom: 10rpx;
  color: red;
}
.notice-detail {
  font-size: 28rpx;
  text-align: center;
  text-align: center;
}
.notice-detail-title {
  font-size: 28rpx;
  text-align: center;
  padding-bottom: 5rpx;
  padding-top: 10px;
}
.ewm {
  margin-top: 20rpx;
  width: 50%;
  height: 400rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 30rpx;
}